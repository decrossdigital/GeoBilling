# ========================================
# GeoBilling Environment Configuration
# ========================================

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Development Database (Local PostgreSQL)
DATABASE_URL="postgresql://geobilling:password@localhost:5432/geobilling_dev"

# Production Database (Render.com PostgreSQL)
# DATABASE_URL="postgresql://username:password@host:5432/geobilling_prod"

# ========================================
# AUTHENTICATION
# ========================================

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"

# Google OAuth (Development)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ========================================
# PAYMENT PROCESSING
# ========================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# PayPal Configuration
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # Change to "live" for production

# ========================================
# EMAIL SERVICES
# ========================================

# Resend.com Configuration
RESEND_API_KEY="your-resend-api-key"
FROM_EMAIL="noreply@uniquitousmusic.com"

# ========================================
# COMPANY INFORMATION
# ========================================

COMPANY_NAME="Uniquitous Music"
COMPANY_EMAIL="george@uniquitousmusic.com"
COMPANY_PHONE="(609) 316-8080"
COMPANY_ADDRESS="123 Music Studio Lane, NJ 08540"
COMPANY_WEBSITE="https://uniquitousmusic.com"

# ========================================
# APPLICATION SETTINGS
# ========================================

# Environment
NODE_ENV="development" # Change to "production" for production

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ========================================
# RENDER.COM PRODUCTION SETTINGS
# ========================================

# When deploying to Render.com, these will be set automatically:
# - DATABASE_URL (from Render PostgreSQL service)
# - NEXTAUTH_URL (from your Render app URL)
# - NODE_ENV="production"

